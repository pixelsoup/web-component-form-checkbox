<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Customised Built-in Element</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="./images/favicon.svg" />
    <link rel="stylesheet" href="css/production.css">
    <script type="module" src="./wc-form-checkbox/form-checkbox.js"></script>
  </head>
  <body>
    <div class="containerPadded">
      <h1>Form Associated Custom Element</h1>
      <form id="myForm">
        <custom-checkbox name="option">Hello WTF</custom-checkbox>
        <div>
          <button type="submit">Submit</button>
        </div>
    </form>

    <script>
      document.getElementById('myForm').addEventListener('submit', (event) => {
        event.preventDefault(); // Prevent default form submission for demonstration
        const formData = new FormData(event.target);
        console.log([...formData.entries()]); // Log submitted data
      });
    </script>
  </body>
</html>